{
  "type": "display",
  "position": "relative",
  "width": "90%",
  "maxWidth": "600px",
  "margin": "auto",
  "backgroundColor": "rgb(166, 166, 166)",
  "children": [
    {
      "type": "flexcontainer",
      "position": "relative",
      "children": [
        {
          "type": "label",
          "position": "relative",
          "width": "100%",
          "backgroundColor": "transparent",
          "text": "this should change",
          "border": {
            "style": "line",
            "width": "2",
            "color": "red"
          },
          "font": {
            "size": 20,
            "typeface": "Times New Roman",
            "style": "italic"
          },
          "rules": [
            {
              "name": "posneg",
              "prop": "backgroundColor",
              "outExp": false,
              "pvs": [
                {
                  "pvName": "loc://pv1",
                  "trigger": true
                }
              ],
              "expressions": [
                {
                  "boolExp": "pv0 > 0",
                  "value": "red"
                },
                {
                  "boolExp": "pv0 < 0",
                  "value": "purple"
                }
              ]
            }
          ]
        },
        {
          "type": "input",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "macroMap": {
            "COLOUR": "purple"
          },
          "color": "${COLOUR}",
          "pvName": "loc://pv1"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "pvName": "ca://SR12A-PC-S2D-06:L5ERRSTATE",
          "tooltip": "Custom tooltip:\n${pvName}\n${pvValue}",
          "precision": 3,
          "alarmBorder": true,
          "textAlign": "center",
          "actions": {
            "executeAsOne": false,
            "actions": [
              {
                "type": "OPEN_WEBPAGE",
                "openWebpageInfo": {
                  "url": "https://www.bbc.co.uk",
                  "description": "BBC"
                }
              }
            ]
          },
          "rules": [
            {
              "name": "posneg",
              "prop": "textAlign",
              "outExp": false,
              "pvs": [
                {
                  "pvName": "loc://pv1",
                  "trigger": true
                }
              ],
              "expressions": [
                {
                  "boolExp": "pv0 > 0",
                  "value": "left"
                },
                {
                  "boolExp": "pv0 < 0",
                  "value": "right"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
