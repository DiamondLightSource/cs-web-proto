{
  "type": "display",
  "position": "relative",
  "width": "80%",
  "margin": "auto",
  "children": [
    {
      "type": "flexcontainer",
      "position": "relative",
      "children": [
        {
          "type": "label",
          "position": "relative",
          "width": "100%",
          "fontWeight": "bold",
          "backgroundColor": "transparent",
          "text": "",
          "rules": [
            {
              "condition": "pv1>=0",
              "trueState": "Positive ⬇⬇⬇",
              "falseState": "Negative ⬇⬇⬇",
              "substitutionMap": {
                "pv1": "loc://pv1"
              },
              "prop": "text"
            },
            {
              "condition": "pv1>=100",
              "trueState": false,
              "falseState": true,
              "substitutionMap": {
                "pv1": "loc://pv1"
              },
              "prop": "visible"
            }
          ]
        },
        {
          "type": "input",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "macroMap": {
            "COLOUR": "purple"
          },
          "color": "${COLOUR}",
          "pvName": "loc://pv1"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "pvName": "loc://pv1",
          "tooltip": "Custom tooltip:\n${pvName}\n${pvValue}"
        },
        {
          "type": "input",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "pvName": "loc://pv2"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "pvName": "loc://pv2"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "pvName": "sim://sine"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "45%",
          "margin": "2%",
          "pvName": "sim://sine",
          "precision": 3
        }
      ]
    },
    {
      "type": "flexcontainer",
      "position": "relative",
      "children": [
        {
          "type": "label",
          "position": "relative",
          "width": "100%",
          "fontWeight": "bold",
          "backgroundColor": "transparent",
          "text": "Alarm PV - Happy between 20 and 80"
        },
        {
          "type": "input",
          "position": "relative",
          "width": "50%",
          "height": "2em",
          "margin": "5px 0 0 0",
          "pvName": "sim://limit#metapv1"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "50%",
          "margin": "5px 0 0 0",
          "pvName": "sim://limit#metapv1"
        },
        {
          "type": "readback",
          "position": "relative",
          "width": "100%",
          "margin": "5px 0 0 0",
          "pvName": "sim://limit#metapv1",
          "alarmBorder": true
        }
      ]
    },
    {
      "type": "display",
      "position": "relative",
      "margin": "20px 0 0 0",
      "children": [
        {
          "type": "label",
          "position": "relative",
          "width": "100%",
          "fontWeight": "bold",
          "backgroundColor": "transparent",
          "text": "Sim Enum"
        },
        {
          "type": "menubutton",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "sim://enum"
        },
        {
          "type": "input",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "sim://enum"
        },
        {
          "type": "readback",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "sim://enum"
        }
      ]
    },
    {
      "type": "display",
      "position": "relative",
      "margin": "20px 0 0 0",
      "children": [
        {
          "type": "label",
          "position": "relative",
          "width": "100%",
          "fontWeight": "bold",
          "backgroundColor": "transparent",
          "text": "Local Enum - [un deux trois]"
        },
        {
          "type": "menubutton",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "loc://enum1<VEnum>(2, \"un\", \"deux\", \"trois\")"
        },
        {
          "type": "input",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "loc://enum1<VEnum>(2, \"un\", \"deux\", \"trois\")"
        },
        {
          "type": "readback",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "loc://enum1"
        },
        {
          "type": "readback",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "enum://bad"
        }
      ]
    },
    {
      "type": "display",
      "position": "relative",
      "margin": "20px 0 0 0",
      "children": [
        {
          "type": "label",
          "position": "relative",
          "width": "100%",
          "fontWeight": "bold",
          "backgroundColor": "transparent",
          "text": "Local initialization"
        },
        {
          "type": "readback",
          "position": "relative",
          "margin": "5px 0 0 0",
          "pvName": "loc://test(1.1)"
        }
      ]
    }
  ]
}
