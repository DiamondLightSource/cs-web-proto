            {
              "condition": "pv1>=0",
              "trueState": "Positive ⬇⬇⬇",
              "falseState": "Negative ⬇⬇⬇",
              "substitutionMap": {
                "pv1": "loc://pv1"
              },
              "prop": "text"
            },
            {
              "condition": "pv1>=100",
              "trueState": false,
              "falseState": true,
              "substitutionMap": {
                "pv1": "loc://pv1"
              },
              "prop": "visible"
            }
          ]
        },
