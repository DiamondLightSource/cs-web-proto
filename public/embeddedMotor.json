{
  "type": "flexcontainer",
  "position": "relative",
  "backgroundColor": "green",
  "children": [
    {
      "type": "label",
      "position": "relative",
      "width": "50%",
      "text": "Position",
      "fontSize": "1.5rem",
      "backgroundColor": "transparent"
    },
    {
      "type": "progressbar",
      "position": "relative",
      "width": "50%",
      "pvName": "sim://sine#m${motor}",
      "precision": 2,
      "min": -1,
      "max": 1,
      "border": "1px solid #aaaaaa",
      "fontSize": "1em"
    }
  ]
}
